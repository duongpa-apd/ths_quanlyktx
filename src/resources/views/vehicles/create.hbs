<div class='container'>
    <h2>Thêm xe mới</h2>
    <form method='POST' action='/vehicles/create'>
        <div class='form-group'>
            <label for='studentId'>Sinh viên</label>
            <select
                class='form-control'
                id='studentId'
                name='studentId'
                required
            >
                {{#each students}}
                    <option value='{{this._id}}'>
                        {{this.studentId}}
                        -
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
        </div>
        <div class='form-group'>
            <label for='vehicleType'>Loại xe</label>
            <input
                type='text'
                class='form-control'
                id='vehicleType'
                name='vehicleType'
                required
            />
        </div>
        <div class='form-group'>
            <label for='licensePlate'>Biển số</label>
            <input
                type='text'
                class='form-control'
                id='licensePlate'
                name='licensePlate'
                required
            />
        </div>
        <div class='form-group'>
            <label for='registerDate'>Ngày đăng ký vé tháng</label>
            <input
                type='date'
                class='form-control'
                id='registerDate'
                name='registerDate'
                required
            />
        </div>
        <button type='submit' class='btn btn-primary'>Thêm</button>
        <a href='/vehicles' class='btn btn-secondary'>Hủy</a>
    </form>
</div>