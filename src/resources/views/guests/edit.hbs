<div class='container'>
    <h2>Cập nhật thông tin khách</h2>
    <form
        method='POST'
        action='/guests/update/{{guest._id}}'
        enctype='application/x-www-form-urlencoded'
    >
        <div class='form-group'>
            <label for='name'>Họ và tên</label>
            <input
                type='text'
                class='form-control'
                id='name'
                name='name'
                value='{{guest.name}}'
                required
            />
        </div>

        <div class='form-group'>
            <label for='identityCard'>Số CMT/CCCD</label>
            <input
                type='text'
                class='form-control'
                id='identityCard'
                name='identityCard'
                value='{{guest.identityCard}}'
                required
            />
        </div>

        <div class='form-group'>
            <label for='birthDate'>Ngày sinh</label>
            <input
                type='date'
                class='form-control'
                id='birthDate'
                name='birthDate'
                value='{{formatDate guest.birthDate}}' <!-- Chuyển đổi timestamp sang YYYY-MM-DD -->
                required
            />
        </div>

        <button type='submit' class='btn btn-primary'>Cập nhật</button>
        <a href='/guests' class='btn btn-secondary'>Hủy</a>
    </form>
</div>
