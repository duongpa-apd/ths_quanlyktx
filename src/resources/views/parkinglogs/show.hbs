<div class='container'>
    <h2>Danh sách gửi xe</h2>
    <a href='/parking-logs/create' class='btn btn-primary mb-3'>Thêm log mới</a>
    <table class='table table-bordered'>
        <thead>
            <tr>
                <th>Biển số xe</th>
                <th>Thời gian gửi</th>
                <th>Thời gian lấy</th>
                <th>Phí phát sinh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each parkingLogs}}
                <tr>
                    <td>{{this.vehicle.licensePlate}}</td>
                    <td>{{this.entryTime}}</td>
                    <td>{{this.exitTime}}</td>
                    <td>{{this.additionalFee}}</td>
                    <td>
                        <a
                            href='/parking-logs/detail/{{this._id}}'
                            class='btn btn-info btn-sm'
                        >Chi tiết</a>
                        <a
                            href='/parking-logs/update/{{this._id}}'
                            class='btn btn-warning btn-sm'
                        >Sửa</a>
                        <form
                            action='/parking-logs/delete/{{this._id}}'
                            method='POST'
                            class='d-inline-block'
                        >
                            <button
                                type='submit'
                                class='btn btn-danger btn-sm'
                            >Xóa</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>