<div class='container'>
    <h2>Thêm log gửi xe</h2>
    <form method='POST' action='/parking-logs/create'>
        <div class='form-group'>
            <label for='vehicleId'>Chọn xe</label>
            <select
                class='form-control'
                id='vehicleId'
                name='vehicleId'
                required
            >
                {{#each vehicles}}
                    <option value='{{this._id}}'>{{this.licensePlate}}</option>
                {{/each}}
            </select>
        </div>
        <div class='form-group'>
            <label for='entryTime'>Thời gian gửi xe</label>
            <input
                type='datetime-local'
                class='form-control'
                id='entryTime'
                name='entryTime'
                required
            />
        </div>
        <div class='form-group'>
            <label for='exitTime'>Thời gian lấy xe (không bắt buộc)</label>
            <input
                type='datetime-local'
                class='form-control'
                id='exitTime'
                name='exitTime'
            />
        </div>

        <button type='submit' class='btn btn-primary'>Thêm log</button>
        <a href='/parking-logs' class='btn btn-secondary'>Hủy</a>
    </form>
</div>